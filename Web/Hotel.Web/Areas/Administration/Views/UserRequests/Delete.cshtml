@model DeleteUserRequestViewModel

@{
    ViewData["Title"] = "Delete User Request";
}

<div>
    <h3 class="mobile-fondsize-20 text-muted text-center">@ViewData["Title"]</h3>
    <hr class="w-50" />
    <div class="container">
        <form asp-controller="UserRequests" asp-action="Delete" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-2"></div>
                <div class="form-group col-md-4">
                    <label asp-for="RequestDate" class="control-label"></label>
                    <input asp-for="RequestDate" disabled="disabled" class="form-control" />
                    <span asp-validation-for="RequestDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" disabled="disabled" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2"></div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2"></div>
                <div class="form-group col-md-4">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" disabled="disabled" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" disabled="disabled" class="form-control"> </textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2"></div>
            </div>
            
            <div class="form-row">
                <div class="form-group col-md-2"></div>
                <div class="form-group col-md-4 text-center">
                    <button type="submit" value="" class="btn btn-danger">Delete</button>
                </div>
                <div class="form-group col-md-4 text-center">
                    <a asp-area="Administration" asp-controller="UserRequests" asp-action="All" class="btn btn-primary">Back</a>
                </div>
                <div class="form-group col-md-2"></div>
            </div>
        </form>
    </div>
</div>

