@model Hotel.Web.ViewModels.Home.HomeViewModel

<div class="text-center">
    <!-- Slider1 -->
    <div class="slider agileits w3layouts">
        <div class="slider-1 agileits w3layouts">
            <ul class="rslides agileits w3layouts" id="slider1">
                <li>
                    <img src="~/pictures/main-slider-1.jpg" alt="Slide-1">
                    <div class="layer agileits w3layouts"></div>
                    <div class="caption agileits w3layouts">
                        <h3>Welcome to  <span> Hotel Boryana</span></h3>
                    </div>
                </li>
                <li>
                    <img src="~/pictures/main-slider-2.jpg" alt="Slide-2">
                    <div class="caption agileits w3layouts">
                        <h3>Welcome to  <span> Hotel Boryana</span></h3>
                    </div>
                </li>
                <li>
                    <img src="~/pictures/main-slider-3.jpg" alt="Slide-3">
                    <div class="caption agileits w3layouts">
                        <h3>Welcome to  <span> Hotel Boryana</span></h3>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- //Slider1 -->
    <div class="clearfix"></div>
</div>

<!-- Projects -->
<div class="projects agileits w3layouts">
    <div class="container">
        <div class="col-md-8 col-sm-8 projects-grid agileits w3layouts projects-grid1 wow slideInLeft">
            <!-- Slider1 -->
            <div class="slider-2 agileits w3layouts">
                <ul class="rslides agileits w3layouts" id="slider2">
                    <li>
                        <img src="~/pictures/club-floor-room.jpg" alt="Slide-1">
                    </li>
                    <li>
                        <img src="~/pictures/suits.jpg" alt="Slide-1">
                    </li>
                </ul>
            </div>
            <!-- //Slider1 -->
            <!-- Slider2 -->
            <div class="slider-3 agileits w3layouts">
                <ul class="rslides agileits w3layouts" id="slider3">
                    <li>
                        <img src="~/pictures/double room.jpg" alt="Slide-2">
                    </li>
                    <li>
                        <img src="~/pictures/single-room.jpg" alt="Slide-2">
                    </li>
                </ul>
            </div>
            <!-- //Slider2 -->
        </div>

        <div class="col-md-4 col-sm-4 projects-grid agileits w3layouts projects-grid2 wow slideInRight">
            <h1>Accommodation</h1>
            <h4 id="room-sidebar-pic">
                <img width="276" height="183" src="~/pictures/welcome.jpg" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="">
            </h4>
            <div class="h4-underline agileits w3layouts wow slideInLeft"></div>
            <p>Welcome to our hotel - a place where you will find comfort and mountain tranquility.</p>
            <a class="agileits w3layoutswow slideInLeft" asp-area="" asp-controller="Accommodations" asp-action="">Read More <span class="glyphicon agileits w3layouts glyphicon-arrow-right" aria-hidden="true"></span></a>
        </div>
    </div>
</div>
<!-- //Projects -->

<div class="awards agileits w3layouts">
    <div class="awards-grids">

        @foreach (var offer in Model.SpecialOffers)
        {
        <div class="col-md-3 col-sm-3 awards-grid agileits w3layouts awards-grid-1 wow fadeInUp">
            <div class="wow agileits w3layouts slideInLeft">
                <img src="~/pictures/present.png" alt="present">
            </div>
            <h4>@offer.Title</h4>
            <div class="h4-underline agileits w3layouts wow slideInLeft"></div>
            <div id="offer-content">@offer.ShortContent</div><br>
            <a asp-controller="SpecialOffers"asp-action="Details" asp-route-id="@offer.Id" class="btn know_btn">more ...</a>
        </div>
        }

        <div class="clearfix"></div>
    </div>
</div>

<div class="services agileits w3layouts">
    <div class="container">
        <div class="services-grids agileits w3layouts">
            <div class="col-md-6 col-sm-6 services-grid agileits w3layouts services-grid1 wow slideInLeft">
                <h2>Holiday and Relax</h2>
                <p></p><p>If you are looking for a city hotel in the nature, Hotel Boryana is your unique destination with unique panoramic views and beautifully situated in a forest. Here we offer international standards of service.</p>
                <p>We are waiting for you!</p>
                <p></p>
            </div>

            <div class="col-md-6 col-sm-6 services-grid agileits w3layouts services-grid2 wow slideInRight">
                <img width="489" height="454" src="~/pictures/services3-1.jpg" alt="picture" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" />
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>