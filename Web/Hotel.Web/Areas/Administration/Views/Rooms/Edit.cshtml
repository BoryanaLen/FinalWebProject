@model EditRoomViewModel

@{
    ViewData["Title"] = "Edit Room";
    var roomTypes = Model.ListOfRoomTypes.Select(x => new SelectListItem(x.Name, x.Id));
}

    <div class="container" style="margin-bottom:100px">
        <h3 class="mobile-fondsize-20 text-muted text-center">@ViewData["Title"]</h3>
        <hr class="w-50" />
        <form asp-controller="Rooms" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-2"></div>
                <div class="form-group col-md-4">
                    <label asp-for="RoomNumber" class="control-label"></label>
                    <input asp-for="RoomNumber" class="form-control" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="RoomTypeId" class="control-label"></label>
                    <select asp-for="@Model.RoomTypeId" class="form-control" asp-items="roomTypes"></select>
                </div>   
                <div class="form-group col-md-2"></div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-2"></div>
                <div class="form-group col-md-8">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2"></div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2"></div>
                <div class="form-group col-md-4 text-center">
                    <button type="submit" value="" class="btn btn-primary">Edit</button>
                </div>
                <div class="form-group col-md-4 text-center">
                    <a asp-area="Administration" asp-controller="Rooms" asp-action="All" class="btn btn-primary">Back</a>
                </div>
                <div class="form-group col-md-2"></div>
            </div>
        </form>
    </div>

