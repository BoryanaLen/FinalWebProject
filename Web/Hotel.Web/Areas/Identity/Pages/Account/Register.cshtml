@page
@model Register
@{
    ViewData["Title"] = "";
}

<h2>@ViewData["Title"]</h2>

<!-- Registration form -->
<div class="reg agileits w3layouts">
    <div class="container-contact-form">
        <div class="register agileits w3layouts">
            <div>
                <div role="form" class="wpcf7" id="wpcf7-f258-p331-o1" lang="bg-BG" dir="ltr">
                    <div class="screen-reader-response"></div>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="wpcf7-form">                       
                        <div class="reg agileits w3layouts">
                            <div class="container">
                                <h2 style="margin-top:30px; margin-bottom:30px;"> Register </h2>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="register agileits w3layouts">
                                    <div class="place wow  agileits w3layoutsslideInLeft animated animated" style="visibility: visible;">
                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="agileits w3layouts slideInRight wow animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5> <label asp-for="Input.FirsName"></label> </h5>
                                                <input asp-for="Input.FirsName" class="form-control" />
                                                <span asp-validation-for="Input.FirsName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="dropdown agileits w3layouts slideInRight wow animated animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5><label asp-for="Input.LastName"></label></h5>
                                                <input asp-for="Input.LastName" class="form-control" />
                                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="dropdown agileits w3layouts slideInRight wow animated animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5><label asp-for="Input.Address"></label></h5>
                                                <input asp-for="Input.Address" class="form-control" />
                                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="dropdown agileits w3layouts slideInRight wow animated animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5><label asp-for="Input.PhoneNumber"></label></h5>
                                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="dropdown agileits w3layouts slideInRight wow animated animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5><label asp-for="Input.Email"></label></h5>
                                                <input asp-for="Input.Email" class="form-control" />
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="dropdown agileits w3layouts slideInRight wow animated animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5><label asp-for="Input.Password"></label></h5>
                                                <input asp-for="Input.Password" class="form-control" />
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="dropdown-button agileits w3layouts">
                                            <div class="dropdown agileits w3layouts slideInRight wow animated animated" tabindex="10" data-settings="{&quot;wrapperClass&quot;:&quot;flat&quot;}">
                                                <h5><label asp-for="Input.ConfirmPassword"></label> </h5>
                                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <br />
                                        <br />

                                        <div class="wow agileits w3layouts slideInLeft animated animated" id="btn-form" style="visibility: visible; animation-name: slideInLeft;">
                                            <input type="submit" value="Register" class="wpcf7-form-control wpcf7-submit">
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wpcf7-response-output wpcf7-display-none"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //Registration form -->

<div class="contact agileits w3layouts">
    <div class="container">
        <h2 class="wow agileits w3layouts slideInLeft">Save time on future reservations</h2>
        <p class="contact-p wow agileits w3layouts slideInLeft">Save time on future reservations by creating a new account with your personal data. Register now via the form above.</p>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
